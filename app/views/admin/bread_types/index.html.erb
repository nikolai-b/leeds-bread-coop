<h1>Listing Bread Types</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Sour dough</th>
      <th>Wholesale Only</th>
      <th>Notes</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @bread_types.each do |bread_type| %>
      <tr>
        <td><%= link_to bread_type.name, [:admin, bread_type] %></td>
        <td><%= bread_type.sour_dough %></td>
        <td><%= bread_type.wholesale_only %></td>
        <td><%= bread_type.notes %></td>
        <td><%= link_to 'Edit', [:admin, bread_type], class: 'btn btn-default btn-xs'  %></td>
        <td><%= link_to 'Destroy', [:admin, bread_type], method: :delete, class: 'btn btn-default btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bread type', new_admin_bread_type_path, class: 'btn btn-default btn-xs btn-success' %>
