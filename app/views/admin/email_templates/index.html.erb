<% model_class = EmailTemplate %>
<div class="page-header">
  <h1>
    <%= t '.title', :default => "Email Templates" %>
  </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>
        <%= model_class.human_attribute_name(:name) %>
      </th>
      <th>
        <%= t '.actions', :default => t("helpers.actions") %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @email_templates.each do |email_template| %>
      <tr>
        <td>
          <%= link_to email_template.name, [:admin, email_template] %>
        </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_email_template_path(email_template), :class => 'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
