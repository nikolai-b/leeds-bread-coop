<%= bootstrap_form_for [:admin, @wholesale_customer] do |f| %>
    <%= f.text_field :name %>
    <%= f.text_area :address %>
    <%= f.text_field :phone %>
    <%= f.time_select :opening_time %>
    <%= f.check_box :delivery_receipt %>
    <%= f.collection_select(:invoice_type_id, WholesaleCustomer.invoice_types.values, :id, :name) %>
    <% button_label = @wholesale_customer.persisted? ? "Update" : "Create" %>
    <%= f.submit button_label, class: "btn btn-default btn-success" %>
<% end %>
