<h1>Delivery Report</h1>

<%= link_to('Yesterday <', delivery_reports_path(date: (@delivery_report.date - 1.day).to_s)) %> 
&emsp;
<%= @delivery_report.date.strftime("%a #{@delivery_report.date.day.ordinalize} %b %y") %>
&emsp;
<%= link_to('> Tomorrow', delivery_reports_path(date: (@delivery_report.date + 1.day).to_s)) %>

<table>
  <thead>
    <tr>
      <th>Collection Point</th>
      <th>Subscriber</th>
      <th>Bread Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @delivery_report.show.try(:each) do |delivery| %>
      <tr>
        <td><strong><%= link_to delivery.collection_point.name, delivery.collection_point %></strong></td>
      </tr>
      <% delivery.items.try(:each) do |item| %>
        <tr>
          <td> </td>
          <td><%= link_to(item.subscriber.name, item.subscriber) %></td>
          <td><%= item.bread_type.name %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<p>
  Download:
  <%= link_to "CSV", delivery_reports_path(date: (@delivery_report.date), format: "csv") %>
</p>

<br>
