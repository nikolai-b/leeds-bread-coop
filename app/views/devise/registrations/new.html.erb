<h2>Subscribe</h2>
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :vertical) do |f| %>
  <% if @subscriber.errors.any? %>
    <div class="error_messages">
      <ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.text_area :address %>
  </div>

  <div class="form-group">
    <%= f.phone_field :phone %>
  </div>

  <div class="form-group">
    <%= f.label :collection_point %>
    <%= collection_select(:subscriber, :collection_point_id, CollectionPoint.all, :id, :name) %>
  </div>

  <div class="form-group">
    <div class="input-append date">
      <%= f.label :start_date, "Start date" %>
      <input class="col-sm-4" data-behaviour='datepicker' value="<%= ((Date.current + 7.days).beginning_of_week + 2.days).try(:strftime, "%d/%m/%Y") %>" id="subscriber_start_date" name="subscriber[start_date]" type="text">
      </input>
      <span class="add-on">
        <i class="icon-th"></i>
      </span>
    </div>
    <script type="text/javascript">
      $('#subscriber_start_date').datepicker({
         format: "dd/mm/yyyy",
         weekStart: 1,
         todayBtn: "linked",
         daysOfWeekDisabled: "0,1,2,4,6"
         });
    </script>
  </div>

  <div class="form-group">
    <%= f.label :bread_type_id %>
    <%= collection_select(:subscriber, :bread_type_id, BreadType.all, :id, :name) %>
  </div>

  <div class="form-group">
    <%= f.text_area :notes %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> </div>
  <% end -%>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div>
    <%= f.submit "Subscribe", class: "btn btn-success" %>
  </div>

  <div class="actions pull-right">
    <div class="soft">
    </div>
  </div>

<% end %>
