<script type="text/javascript">
  $(document).ready(function(e) {

  $('#holiday_start_date').datepicker({ format: "dd/mm/yyyy", weekStart: 1,
      todayBtn: "linked", autoclose: true
      });

  $('#holiday_end_date').datepicker({ format: "dd/mm/yyyy",
    todayBtn: "linked", autoclose: true
    });
  });

</script>

<%= f.text_field :start_date, value: (Date.current + 3.days).strftime('%d/%m/%Y') %>
<%= f.text_field :end_date, value: (Date.current + 4.days).strftime('%d/%m/%Y') %>
<%= f.button :submit %>
