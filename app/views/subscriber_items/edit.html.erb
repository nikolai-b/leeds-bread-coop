<table>
  <thead>
    <tr>
      <th>Bread Type</th>
      <th>Collection Point</th>
      <th>Delivery Day</th>
    </tr>
  </thead>

  <tbody>
    <% @subscriber.subscriber_items.try(:each) do |subscriber_item| %>
      <tr>
        <td><%= subscriber_item.bread_type.name %></td>
        <td><%= @subscriber.collection_point.name %></td>
        <td><%= subscriber_item.collection_day_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if (@subscriber.num_paid_subs > 0) %>
  <%= bootstrap_form_for(current_subscriber, as: :subscriber, url: subscriber_path(current_subscriber), layout: :inline, html: { method: :put }) do |f| %>
    <% if @subscriber.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-error">
          <%= "#{pluralize(@subscriber.errors.count, "error")} prohibited this booking from being saved:" %>
        </div>
      </div>
    <% end %>

    <%= render 'shared/subscription', f: f%>
    <%= f.submit 'Update', class: "btn btn-success" %>
  <% end %>


  <p><%= link_to "Cancel my payments", subscriber_subs_path(@subscriber), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>
<% end %>
