<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @subscriber.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @subscriber.email %>
</p>

<p>
  <strong>Address:</strong>
  <%= @subscriber.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @subscriber.phone %>
</p>

<p>
  <strong>Collection point:</strong>
  <%= @subscriber.collection_point.name %><br>
  <%= "#{@subscriber.collection_point.address}, #{@subscriber.collection_point.post_code}" %>
</p>

<p>
  <strong>Bread subscripts:</strong>
  <%= @subscriber.paid_sub_items.try(:map) {|sub_item| "#{sub_item.bread_type.name} on #{sub_item.collection_day_name}"}.join(', ') %>
</p>
<p>
  <strong>Number of paid subs:</strong>
  <%= @subscriber.num_paid_subs %>
</p>
<p>
  <strong>Created at</strong>
  <%= @subscriber.created_at.to_formatted_s(:rfc822) %>
</p>
<p>
  <strong>Updated at</strong>
  <%= @subscriber.updated_at.to_formatted_s(:rfc822) %>
</p>


<%= link_to "Edit", edit_subscriber_path(@subscriber) %>
