<% model_class = WholesaleCustomer %>
<div class="page-header">
  <h1>
    <%= t '.title', :default => "Wholesale Customer" %>
  </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>
        <%= model_class.human_attribute_name(:name) %>
      </th>
      <th>
        <%= t '.actions', :default => t("helpers.actions") %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @wholesale_customers.each do |wholesale_customer| %>
      <tr>
        <td>
          <%= link_to wholesale_customer.name, wholesale_customer_path(wholesale_customer) %>
        </td>
        <td>
          <%= link_to "New Order", new_wholesale_customer_order_path(wholesale_customer), class: "btn btn-default btn-xs"; %>
          <%= link_to 'Show orders', wholesale_customer_orders_path(wholesale_customer.id),  :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_wholesale_customer_path(wholesale_customer), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), wholesale_customer_path(wholesale_customer), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-default btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('.new', :default => t("helpers.links.new")), new_wholesale_customer_path, :class => 'btn btn-default btn-xs' %>
